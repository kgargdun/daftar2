<%- include('partials/header') %>

<div class="container mt-5">
  <% if(ln==="en") { %>
    <h1>Login</h1>
    <% } else { %>
      <h1 lang="hi">लॉगइन करें</h1>
    <% } %>
  <%- include('partials/errors') %>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <%if(ln==="en") { %>
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" placeholder="inkers@com">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" placeholder="inkers">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>
          <% } else { %>
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email" lang="hi">ई-मेल</label>
              <input type="email" class="form-control" name="username"  placeholder="inkers@com">
            </div>
            <div class="form-group">
              <label for="password" lang="hi">पासवर्ड</label>
              <input type="password" class="form-control" name="password" placeholder="inkers">
            </div>
            <button type="submit" class="btn btn-dark" lang="hi">लॉगइन करें</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <%if(ln==="en") { %>
  <a style="margin-right:2rem" class="btn btn-info btn alt" href="register">Not registered? Register</a>
  <a class="btn btn-warning btn alt" href="/forgot">Forgot Password?</a>
  <% } else { %>
  <a class="btn btn-info btn-sm alt" href="register" lang="hi">पंजीकृत नहीं? रजिस्टर करें</a>
  <a class="btn btn-warning btn alt" href="/forgot" lang="hi">पासवर्ड भूल गए?</a>
  <% } %>

</div>

<%- include('partials/footer') %>