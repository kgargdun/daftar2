<%- include('partials/header') %>
<div class="container mt-5">
  <% if(ln==="en") { %>
  <h1>Register</h1>
  <% } else { %>
    <h1 lang="hi">रजिस्टर करें</h1>
  <% } %>

  <%- include('partials/errors') %>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <% if(ln==="en") { %>
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
              <label for="confirm-password">Confirm Password</label>
              <input type="password" class="form-control" name="repassword">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
            <br>
          </form>
          <% } else { %>
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email" lang="hi">ई-मेल</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password" lang="hi">पासवर्ड</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
              <label for="confirm-password" lang="hi">पासवर्ड की पुष्टि कीजिये</label>
              <input type="password" class="form-control" name="repassword">
            </div>
            <button type="submit" class="btn btn-dark" lang="hi">रजिस्टर करें</button>
            <br>
          </form>
          <% } %>


        </div>
      </div>
    </div>
  </div>
  <% if(ln==="en") { %>
  <a class="btn btn-info btn-sm alt" href="login"> Already Registered? Login</a>
  <% } else { %>
  <a class="btn btn-info btn-sm alt" href="login" lang="hi"> पहले से पंजीकृत? लॉग इन करें</a> 
    <% } %>
</div>
<%- include('partials/footer') %>